generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}



model User {
  slug      String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  name      String
  avatar    String   @default("default.jpg")
  cover     String   @default("default.jpg")
  bio       String?
  link      String?
  tweets    Tweet[] 
  likes     TweetLike[]  
}

model Tweet {
  id         String  @id @default(auto()) @map("_id") @db.ObjectId
  userSlug   String
  body       String
  image      String?
  createdAt  DateTime @default(now())
  answerOf   Int      @default(0)
  user       User     @relation(fields: [userSlug], references: [slug])
  likes      TweetLike[]
}

model TweetLike {
  id       String        @id @default(auto()) @map("_id") @db.ObjectId
  userSlug   String
  tweetId    String
  user       User     @relation(fields: [userSlug], references: [slug])
  tweet      Tweet    @relation(fields: [tweetId], references: [id])
}

model Follow {
  id       String        @id @default(auto()) @map("_id") @db.ObjectId
  user1Slug  String
  user2Slug  String
}

model Trend {
  id       String        @id @default(auto()) @map("_id") @db.ObjectId
  hashtag   String
  counter   Int      @default(1)
  updatedAt DateTime @default(now())
}